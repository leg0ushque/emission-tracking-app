@model EmisTracking.WebApi.Models.ViewModels.ConsumptionViewModel

@{
    ViewData[Constants.GenerateBreadcrumb] = new();
}

@using EmisTracking.Localization

@section Breadcrumb
{
    <li class="breadcrumb-item active"><a asp-controller="Consumptions" asp-action="Index">@LangResources.Titles.ConsumptionsIndex</a></li>
    <li class="breadcrumb-item active">@ViewData["Title"]</li>
}

<form asp-controller="Consumptions" asp-action="@ViewData["AspAction"]" asp-antiforgery="true" method="post">
    <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
    <input asp-for="Id" hidden="hidden" />

    <div class="row mb-3">
        <label asp-for="ConsumptionGroupId" class="col-md-2 control-form-label"></label>
        <div class="col-sm-6">
            <select asp-for="ConsumptionGroupId" class="form-control">
                <option value="" disabled selected>@LangResources.ChooseSomething</option>
                @if (Model.ConsumptionGroups?.Any() ?? false)
                {
                    @foreach (var item in Model.ConsumptionGroups)
                    {
                        <option value="@item.Value">@item.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="ConsumptionGroupId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Mass" class="col-md-2 control-form-label"></label>
        <div class="col-sm-6">
            <input asp-for="Mass" class="form-control" />
            <span asp-validation-for="Mass" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Month" class="col-md-2 control-form-label"></label>
        <div class="col-sm-6">
            <input asp-for="Month" class="form-control" />
            <span asp-validation-for="Month" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Year" class="col-md-2 control-form-label"></label>
        <div class="col-sm-6">
            <input asp-for="Year" class="form-control" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-6">
            <input type="submit" class="btn btn-primary" value="@LangResources.SaveButtonText" />
        </div>
    </div>
    <br />
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i>
        @LangResources.ReturnButtonText
    </a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}