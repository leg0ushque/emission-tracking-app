@model SidebarDropdownModel

<a class="nav-link collapsed" data-bs-target="#@Model.DropdownId" data-bs-toggle="collapse" href="#">
    <i class="@Model.IconName"></i><span>@Model.Text</span><i class="bi bi-chevron-down ms-auto"></i>
</a>
<ul id="@Model.DropdownId" class="nav-content collapse " data-bs-parent="#sidebar-nav">
    @foreach (var item in Model.Items)
    {
        <li>
            <a asp-action="@item.Item2" asp-controller="@item.Item3">
                <i class="bi bi-circle"></i><span>@item.Item1</span>
            </a>
        </li>
    }
</ul>
