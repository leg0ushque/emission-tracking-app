@model EmisTracking.WebApi.Models.Models.ChangePasswordModel
@{
    ViewData["Title"] = "Изменение пароля";
}

<h2>@ViewData["Title"].</h2>

<form asp-action="ChangePassword" asp-controller="Auth" asp-antiforgery="true" method="post">
    <h4>Подсказки для изменения пароля</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="OldPassword" class="col-md-6 col-form-label">Старый пароль</label>
        <div class="col-md-10">
            <input asp-for="OldPassword" class="form-control" />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="NewPassword" class="col-md-6 col-form-label">Новый пароль</label>
        <div class="col-md-10">
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="col-md-6 col-form-label">Подтвердите пароль</label>
        <div class="col-md-10">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="offset-md-2 col-md-10">
            <button type="submit" class="btn btn-outline-primary mr-3">Изменить пароль</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">Назад</a>
        </div>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}